  # debug   
}

# ─────────────────────────────────────────────
# 1) Sports Scheduler app
# ─────────────────────────────────────────────
{$DOMAIN} {
  encode gzip zstd

  # --- API routes to backend ---
  @api       path /api/*
  @football  path /football/*
  @analytics path /analytics/*
  @health    path /health /api/health

  handle @api {
    reverse_proxy api:3000
  }
  handle @football {
    reverse_proxy api:3000
  }
  handle @analytics {
    reverse_proxy api:3000
  }
  handle @health {
    reverse_proxy api:3000
  }

  # --- Everything else is the SPA ---
  handle {
    root * /usr/share/caddy
    try_files {path} /index.html
    file_server
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    Referrer-Policy "no-referrer-when-downgrade"
  }
}

# ─────────────────────────────────────────────
# 2) Portfolio Chat app
#    URL: https://portfoliochat.davidkimhi.com
# ─────────────────────────────────────────────
portfoliochat.davidkimhi.com {
  encode gzip zstd

  # --- API routes to backend (FastAPI / whatever on :8000) ---
  @api path /api/*
  handle @api {
    reverse_proxy portfoliochat-api:8000
  }

  # --- Everything else goes to frontend container ---
  # (e.g. React dev/prod server on :3000)
  handle {
    reverse_proxy portfoliochat-frontend:3000
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    Referrer-Policy "no-referrer-when-downgrade"
  }
}
